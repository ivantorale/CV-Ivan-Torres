<div class="container">
	<div class="row row-cols-1 row-cols-md-3 g-4">
		@foreach (var certificates in ViewBag.VCertificates)
		{
			<div class="col">
				<div class="card h-100">
					<img src="@certificates.Foto" class="card-img-top" alt="imagen proyecto" />
					<div class="card-body">
						<h5 class="card-title">@certificates.Title</h5>
						<p class="card-text">@certificates.Empresa</p>
					</div>
					<div class="card-footer">
						<a class="btn btn-primary" href="@certificates.Link" target="_blank"
					   rel="noopener noreferrer">Visitar</a>
					</div>
				</div>
			</div>
		}
	</div>
</div>
